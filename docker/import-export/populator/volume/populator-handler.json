{
  "name": "Populator Handler - Create/Update TEI, Enrollment, and Event",
  "endpoint": {
    "method": "POST",
    "pattern": "/populator"
  },
  "transformation": {
    "input": "JSON",
    "output": "JSON"
  },
  "inputMapping": {
    "requestBody.orgUnit": "orgUnit",
    "requestBody.program": "program",
    "requestBody.attributes": "attributes",
    "requestBody.trackedEntityType": "trackedEntityType",
    "requestBody.event": "event",
    "requestBody.enrollmentDate": "enrollmentDate",
    "requestBody.incidentDate": "incidentDate",
    "requestBody.eventDate": "eventDate"

  },
  "inputTransforms": {
    "trackedEntityInstanceID": "$exists(lookupRequests.getTrackedEntityInstance.trackedEntityInstances[0].trackedEntityInstance) ? lookupRequests.getTrackedEntityInstance.trackedEntityInstances[0].trackedEntityInstance : ''"
  },
  "inputValidation": {
    "type": "object",
    "properties": {
      "requestBody": {
        "type": "object",
        "properties": {
          "attributes": {
            "type": "array"
          },
          "orgUnit": {
            "type": "string"
          },
          "event": {
            "type": "object",
            "properties": {
              "programStage": {
                "type": "string"
              }
            },
            "required": ["programStage"]
          },
          "enrollmentDate": {
            "type": "string"
          },
          "incidentDate": {
            "type": "string"
          },
          "eventDate": {
            "type": "string",
            "pattern": "^(19|20)\\d\\d-(0[1-9]|1[012])-(0[1-9]|[12][0-9]|3[01])$"
          }
        },
        "required": ["orgUnit", "rsaid", "eventDate"]
      },
      "lookupRequests": {
        "type": "object",
        "properties": {
          "getTrackedEntityInstance": {
            "type": "object",
            "properties": {
              "trackedEntityInstances": {
                "type": "array",
                "maxItems": 1,
                "items": {
                  "type": "object",
                  "properties": {
                    "trackedEntityInstance": {
                      "type": "string"
                    }
                  }
                }
              }
            },
            "required": ["trackedEntityInstances"]
          }
        },
        "required": ["getTrackedEntityInstance"]
      }
    }
  },
  "requests": {
    "lookup": [
      {
        "id": "getTrackedEntityInstance",
        "config": {
          "method": "GET",
          "url": "http://dhis-web:8080/api/trackedEntityInstances",
          "headers": {
            "Content-Type": "application/json",
            "Authorization": "Basic YWRtaW46ZGlzdHJpY3Q="
          },
          "params": {
            "query": {
              "filter": {
                "prefix": "NWRtCWw116x:EQ:",
                "path": "payload.rsaid"
              },
              "ou": {
                "path": "payload.orgUnit"
              }
            }
          }
        }
      }
    ],
    "response": [
      {
        "id": "trackedEntityInstanceHandler",
        "config": {
          "method": "POST",
          "url": "http://populator:3003/trackedEntityInstance/:trackedEntityInstanceID",
          "headers": {
            "Content-Type": "application/json"
          },
          "params": {
            "url": {
              "trackedEntityInstanceID": {
                "path": "transforms.trackedEntityInstanceID"
              }
            }
          }
        }
      }
    ]
  }
}
