{
  "name": "Part 1 of Creating a DHIS2 Tracked Entity Instances",
  "endpoint": {
    "method": "POST",
    "pattern": "/trackedEntityInstance/:trackedEntityInstanceID"
  },
  "transformation": {
    "input": "JSON",
    "output": "JSON"
  },
  "inputMapping": {
    "requestBody.orgUnitID": "orgUnit",
    "requestBody.event": "event",
    "requestBody.enrollmentDate": "enrollmentDate",
    "requestBody.incidentDate": "incidentDate"
  },
  "inputValidation": {
    "type": "object",
    "properties": {
      "requestBody": {
        "type": "object",
        "properties": {
          "enrollmentDate": {
            "type": "string"
          },
          "incidentDate": {
            "type": "string"
          }
        },
        "required": ["orgUnit", "attributes", "event"]
      },
      "lookupRequests": {
        "type": "object",
        "properties": {
          "createTrackedEntityInstance": {
            "type": "object",
            "properties": {
              "response": {
                "type": "object",
                "properties": {
                  "importSummaries": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        // Check 1 import
                        "reference": {
                          "type": "string"
                        }
                      },
                      "required": ["reference"]
                    }
                  }
                },
                "required": ["importSummaries"]
              }
            },
            "required": ["response"]
          }
        }
      }
    }
  },
  "requests": {
    "lookup": [
      {
        "id": "updateTrackedEntityInstance",
        "forwardExistingRequestBody": true,
        "config": {
          "method": "POST",
          "url": "http://populator:3003/updateTrackedEntityInstance",
          "headers": {
            "Content-Type": "application/json"
          }
        }
      }
    ],
    "response": [
      {
        "id": "createEnrollment",
        "config": {
          "method": "POST",
          "url": "http://openhim-core:5001/populator/enrollment",
          "headers": {
            "Content-Type": "application/json"
          }
        }
      }
    ]
  }
}
