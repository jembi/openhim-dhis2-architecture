{
  "name": "Create/Update Tracked Entity (Pregnancy Tracker)",
  "endpoint": {
    "method": "POST",
    "pattern": "/trackedEntityHandler"
  },
  "transformation": {
    "input": "JSON",
    "output": "JSON"
  },
  "inputMapping": {
    "requestBody.attributes": "attributes",
    "requestBody.orgUnit": "orgUnit",
    "requestBody.event": "event",
    "requestBody.enrollmentDate": "enrollmentDate",
    "requestBody.incidentDate": "incidentDate"
  },
  "inputValidation": {
    "type": "object",
    "properties": {
      "requestBody": {
        "type": "object",
        "properties": {
          "attributes": {
            "type": "array"
          },
          "orgUnit": {
            "type": "string"
          },
          "event": {
            "type": "object",
            "properties": {
              "programStage": {
                "type": "string"
              }
            },
            "required": ["programStage"]
          },
          "enrollmentDate": {
            "type": "string"
          },
          "incidentDate": {
            "type": "string"
          }
        },
        "required": ["orgUnit", "rsaid"]
      },
      "lookupRequests": {
        "type": "object",
        "properties": {
          "trackedEntityInstances": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "trackedEntityInstance": {
                  "type": "string"
                }
              },
              "required": ["trackedEntityInstance"]
            }
          }
        }
      }
    }
  },
  "requests": {
    "lookup": [
      {
        "id": "getTrackedEntityInstance",
        "config": {
          "method": "GET",
          "url": "http://dhis-web:8080/api/trackedEntityInstances",
          "headers": {
            "Content-Type": "application/json",
            "Authorization": "Basic YWRtaW46ZGlzdHJpY3Q="
          },
          "params": {
            "filter": {
              "prefix": "NWRtCWw116x:EQ:",
              "path": "payload.rsaid"
            },
            "ou": {
              "path": "payload.orgUnit"
            }
          }
        }
      }
    ],
    "response": [
      {
        "id": "trackedEntityInstanceHandler",
        "config": {
          "method": "POST",
          "url": "http://populator:3003/trackedEntityInstance/:trackedEntityInstanceID",
          "headers": {
            "Content-Type": "application/json"
          },
          "params": {
            "url": {
              "trackedEntityInstanceID": {
                "path": "lookupRequests.trackedEntityInstances[0].trackedEntityInstance"
              }
            }
          }
        }
      }
    ]
  }
}
